<!-- views/pages/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>

    <header>
        <% include ../partials/header %>
    </header>

    <main role="main">
        <!-- .jumbotron -->
        <div class="jumbotron">
            <!-- .container -->
            <div class="container">
                <h1>GitHub Followers Lookup</h1>
                <p>Enter a GitHub username to see their followers</p>
                <!-- SEARCH BAR -->
                <div class="row">
                    <div class="col">
                        <form id="search-form" action="/search" method="POST">
                            <div class="input-group">
                                <input type="query" name="username" id="search-user" class="form-control" placeholder="Search for github username..." aria-label="Search for github username..." value="<% if (locals.previousSearchUser) { %><%= previousSearchUser %><%}%>" />
                                <span class="input-group-btn">
                                    <button class="btn btn-secondary" type="submit">Search</button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- END SEARCH BAR -->
            </div>
            <!-- END .container  -->
        </div>
        <!-- END .jumbotron -->

        <!-- Search results -->
        <% var user = user ; %>
        <% if (user) { %>
            <div class="container">
                <div id="search-user-results">
                    <div class="card" style="width: 20rem;">
                        <img class="card-img-top" src=<%= user.avatar_url %> alt="Card image cap">
                        <div class="card-body">
                            <a href=<%= user.html_url %> target="_blank">
                                <h4 class="card-title"><%= user.login %></h4>
                            </a>
                            <p class="card-text"><%= user.name %></p>
                            <p class="card-text"><%= user.followers %> followers</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <% for(var followerIndex = firstFollowerIndex; followerIndex <= lastFollowerIndex; followerIndex++) { %>
                                <a href=<%= followers[followerIndex].html_url %> target="_blank">
                                    <img class="card-img-top" src=<%= followers[followerIndex].avatar_url %> alt="follower avatar">
                                    <li class="list-group-item"><%= followerIndex + 1 %>. <%= followers[followerIndex].login %></li>
                                </a>
                            <% } %>
                        </ul>
                        <div class="card-body">
                            <!-- <a href="#" class="btn btn-primary">Previous</a> -->
                            <!-- <a href="#" class="btn btn-primary">Next</a> -->
                            <nav aria-label="Page navigation example">
                                <% if (numberOfPages > 0) { %>
                                    <ul class="pagination">
                                        <!-- Previous Button -->
                                        <% if (currentPage == 1) { %>
                                            <li class="page-item disabled">
                                                <a href="#" class="page-link">Previous</a>
                                            </li>
                                        <% } else { %>
                                            <li class="page-item">
                                                <a href="/search/<%= previousSearchUser %>/<%= currentPage - 1 %>" class="btn btn-primary">Previous</a>
                                            </li>
                                        <% } %>
                                        <!-- END Previous Button -->
                                        <!-- Pages -->
                                        <% for (var pageNumber = 1; pageNumber <= numberOfPages; pageNumber++) { %>
                                            <li class="page-item <% if (currentPage == pageNumber) {%>active<%}%>">
                                                <a class="page-link" href="/search/<%= previousSearchUser %>/<%= pageNumber%>"><%= pageNumber %></a>
                                            </li>
                                        <% } %>
                                        <!-- END Pages -->
                                        <!-- Last Button -->
                                        <% if (currentPage == numberOfPages) { %>
                                            <li class="page-item disabled">
                                                <a href="#" class="page-link">Next</a>
                                            </li>
                                        <% } else { %>
                                            <li class="page-item">
                                                <a href="/search/<%= previousSearchUser %>/<%= currentPage + 1 %>" class="btn btn-primary">Next</a>
                                            </li>
                                        <% } %>
                                        <!-- END Last Button -->
                                    </ul>
                                <% } %> 
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
        <!-- END search results -->

    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>
</html>