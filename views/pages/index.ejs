<!-- views/pages/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>

    <header>
        <% include ../partials/header %>
    </header>

    <main role="main">
        <!-- .jumbotron -->
        <div class="jumbotron">
            <!-- .container -->
            <div class="container">
                <h1>GitHub Followers Lookup</h1>
                <p>Enter a GitHub username to see their followers</p>
                <!-- SEARCH BAR -->
                <div class="row">
                    <div class="col">
                        <form id="search-form" action="/search" method="POST">
                            <div class="input-group">
                                <input type="query" name="username" id="search-user" class="form-control" placeholder="Try entering defunkt ..." aria-label="Try entering defunkt ..." value="<% if (locals.previousSearchUser) { %><%= previousSearchUser %><%}%>" />
                                <span class="input-group-btn">
                                    <button class="btn btn-custom" type="submit">Search</button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- END SEARCH BAR -->
            </div>
            <!-- END .container  -->
        </div>
        <!-- END .jumbotron -->

        <!-- Search results -->
        <% var user = user ; %>
        <% if (user) { %>
            <div class="container">
                <!-- #search-user-results -->
                <div id="search-user-results" class="row">
                    <!-- Current user -->
                    <div class="col-lg-3 col-md-4 col-sm-4 col-12">
                        <div class="card">
                            <img class="card-img-top" src=<%= user.avatar_url %> alt="Card image cap">
                            <div class="card-body card-user">
                                <h4 class="card-text"><%= user.name %></h4>
                                <a href=<%= user.html_url %> target="_blank">
                                    <h5 class="card-title"><i class="ion-social-github"></i> <%= user.login %></h5>
                                </a>
                                <p class="card-text">Followers <span class="badge badge-pill badge-custom"><%= user.followers %></span></p>    
                            </div>
                        </div>
                    </div>
                    <!-- END Current user -->
                    <div class="col-lg-9 col-md-8 col-sm-8 col-12">
                        <div class="centered-text title">
                            <h4>List of Followers</h4>                        
                        </div>
                        <!-- Followers -->
                        <ul class="list-group list-group-flush">
                            <div class="container">
                                <div class="row">
                                    <% for(var followerIndex = 0; followerIndex < followers.length; followerIndex++) { %>
                                        <div class="col-lg-4 col-md-6 col-sm-6 col-12 card-follower">
                                            <img class="card-img" src=<%= followers[followerIndex].avatar_url %> alt="follower avatar">
                                            <div class="card-body">
                                                <a href=<%= followers[followerIndex].html_url %> target="_blank">
                                                    <h6 class="card-title"><i class="ion-social-github"></i> <%= followers[followerIndex].login %></h6>
                                                </a>
                                            </div>
                                        </div>
                                    <% } %>  
                                </div>
                            </div>
                        </ul>
                        <!-- END Followers -->
                        <!-- Paginations -->
                        <div class="card-body">
                            <nav aria-label="Page navigation">
                                <% if (numberOfPages > 1) { %>
                                    <ul class="pagination justify-content-center">
                                        <!-- Previous Button -->
                                        <% if (currentPage != 1) { %>
                                            <li class="page-item">
                                                <a href="/search/<%= previousSearchUser %>/<%= currentPage - 1 %>" class="page-link"><i class="ion-ios-arrow-left"></i></a>
                                            </li>
                                        <% } %>
                                        <!-- END Previous Button -->
                                        <!-- Pages -->
                                        <li class="page-item <% if (currentPage == 1) {%>active<%}%>">
                                            <a class="page-link" href="/search/<%= previousSearchUser %>/1">1</a>
                                        </li>
                                        <% var pageNumber = (Number(currentPage) > 5 ? Number(currentPage) - 1 : 2) ; %>
                                        <% if (pageNumber !== 2) { %> 
                                            <li class="page-item disabled">
                                                <a class="page-link">...</a>
                                            </li>
                                        <% } %>
                                        <% for (; (pageNumber <= Number(currentPage) + 1) && (pageNumber < numberOfPages) ; pageNumber++) { %>
                                            <li class="page-item <% if (currentPage == pageNumber) {%>active<%}%>">
                                                <a class="page-link" href="/search/<%= previousSearchUser %>/<%= pageNumber%>"><%= pageNumber %></a>
                                            </li>
                                        <% } %>
                                        <% if ( (pageNumber == Number(currentPage) + 2) && (pageNumber < numberOfPages) ) { %> 
                                            <li class="page-item disabled">
                                                <a class="page-link">...</a>
                                            </li>
                                        <% } %>
                                        <li class="page-item <% if (currentPage == numberOfPages) {%>active<%}%>">
                                            <a class="page-link" href="/search/<%= previousSearchUser %>/<%= numberOfPages %>"><%= numberOfPages %></a>
                                        </li>
                                        <!-- END Pages -->
                                        <!-- Next Button -->
                                        <% if (currentPage != numberOfPages) { %>
                                            <li class="page-item">
                                                <a href="/search/<%= previousSearchUser %>/<%= currentPage + 1 %>" class="page-link"><i class="ion-ios-arrow-right"></i></a>
                                            </li>
                                        <% } %>
                                        <!-- END Last Button -->
                                    </ul>
                                <% } %> 
                            </nav>
                        </div>
                        <!-- END Paginations -->
                    </div>
                </div>
                <!-- END #search-user-results -->
            </div>
        <% } %>
        <!-- END search results -->

    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>
</html>